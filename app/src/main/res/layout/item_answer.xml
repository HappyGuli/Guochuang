<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_bg"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_answer_user"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/usericon1"
                    android:gravity="center_vertical"
                    />



                <TextView
                    android:layout_toRightOf="@+id/iv_answer_user"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_answer_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="张三"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/primary_dark"
                    />


                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:id="@+id/tv_answer_thanked_number"
                    android:background="@drawable/tv_answer_tag"
                    android:textSize="6sp"
                    android:textColor="#ffffff"
                    android:layout_width="30dp"
                    android:text="最优答案"
                    android:layout_height="16dp"
                    />



                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:id="@+id/tv_answer_tag"
                    android:background="@drawable/tv_answer_tag"
                    android:textSize="6sp"
                    android:textColor="#ffffff"
                    android:layout_width="34dp"
                    android:text="最优答案"
                    android:layout_height="16dp"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColor="#000000"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_answer_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:maxLines="4"
                    android:lineSpacingMultiplier="1.3"
                    android:ellipsize="end"
                    android:text="test"
                    />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>