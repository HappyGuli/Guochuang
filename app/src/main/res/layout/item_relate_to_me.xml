<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_icon"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/usericon1"/>

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_user_icon">

                <TextView
                    android:id="@+id/tv_relate_to_me_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="张三"
                    android:textColor="@color/primary"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"

                    android:textColor="@color/text_primary"
                    android:layout_toRightOf="@+id/tv_relate_to_me_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />


                <TextView
                    android:id="@+id/tv_relate_to_me_date"
                    android:layout_alignParentEnd="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016年1月23日"
                    android:layout_alignParentBottom="false"
                    android:textSize="12sp"
                    android:layout_marginTop="28dp"
                    android:layout_alignParentRight="false" />
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/view_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            xmlns:android="http://schemas.android.com/apk/res/android">
        </View>

    </android.support.v7.widget.CardView>

</FrameLayout>



