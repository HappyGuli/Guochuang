<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/helloworld.guli.com.guochuang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:background="@color/card_bg">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    app1:civ_border_width="1dp"
                    app1:civ_border_color="@color/light"
                    android:id="@+id/question_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    app:roundWidth="5dp"
                    app:roundHeight="5dp"
                    android:src="@mipmap/usericon1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="3dp"
                        android:src="@mipmap/ic_thanked"
                        />

                    <TextView
                        android:id="@+id/tv_thanked_number"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="103"
                        android:layout_gravity="center"
                        />
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/question_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textColor="@color/item_question_detail"
                    android:layout_marginRight="5dp"
                    android:text="text"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"

                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="@color/item_question_detail"
                    android:id="@+id/question_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:text="test"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/question_descript"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:textColor="@color/item_question_username"
                        android:text="张谷力发起了提问 共106次浏览"
                        />

                    <TextView
                        android:id="@+id/answer_tv"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:textColor="@color/primary"
                        android:text="回答"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>